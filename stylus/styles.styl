//- Imports / Variables
@import '_reset'

cLightGrey  = #737373
cLightBlue  = #E3E8FF
cBlue       = #4A90E2
cBlack      = #313131
cBackground = #FFFDF6

//- General styles
*
    box-sizing: border-box

html, body
    display: block
    height: 100%
    position: relative
    width: 100%

body
    background: cBackground
    border-top: 5px solid cBlue
    font-family: -apple-system,BlinkMacSystemFont,"avenir next",avenir,helvetica,"helvetica neue",ubuntu,roboto,noto,"segoe ui",arial,sans-serif
    font-size: 14px
    padding: 0

a,a:visited
    color: cBlue
    font-weight: bold
    text-decoration: underline
    transition: .3s ease all

    &:hover
        color: #3B7CC8

hr
    background: rgba(0,0,0,0.1)
    border: 0
    height: 1px
    margin: 100px 0 80px
    width: 100%

h1,h2,h3,h4,h5,h6
    font-family: "Open Sans", "Helvetica", "Arial", sans-serif

h3.heading
    font-size: 40px
    font-weight: bold
    letter-spacing: -1.5px
    margin: 0 0 40px 0

//- Header
header
    margin: 100px 0
    width: 100%
    text-align: center

    h1
        border: 1px solid #4A90E2
        border-radius: 10px
        color: white
        display: inline-block
        font-size: 24px
        font-weight: bold
        margin: 0 auto 10px
        overflow: hidden
        width: auto

        span
            display: inline-block
            padding: 10px 20px

        span.blue
            background: #4A90E2

        span.white
            background: white
            color: #4A90E2
            margin-left: -7px

    h3
        font-size: 60px
        font-weight: bold
        letter-spacing: -1.5px
        margin: 0
        text-align: center

        span
            display: block
            font-size: 14px
            font-style: italic
            font-weight: normal
            letter-spacing: 0
            margin-top: 20px

//- Main Container
.main-container
    display: flex
    flex-wrap: wrap
    margin: 0 auto
    max-width: 70rem
    padding: 20px
    width: 100%

//- Text Container
.text-container
    display: block
    margin: 0 auto 120px
    padding: 15px 25px 25px
    width: 50%

    h3
        background-color: #fff2ac
        background-image: -webkit-linear-gradient(left, #ffe359 0%, #fff2ac 100%)
        background-image: -o-linear-gradient(left, #ffe359 0%, #fff2ac 100%)
        background-image: linear-gradient(to right, #ffe359 0%, #fff2ac 100%)
        border-radius: 20% 24% 30% 32%
        display: inline-block
        width: auto

    p
        font-size: 16px
        line-height: 24px
        margin-bottom: 20px

    ol, ul
        margin: 20px 0 0 0
        padding: 0 0 0 20px

        li
            font-size: 16px
            line-height: 24px
            margin: 20px 0

//- Demo Container
.demo-container
    background: white
    border-radius: 5px
    box-shadow: 0 2px 8px 0 rgba(0,0,0,0.2)
    display: block
    margin: 0 auto 120px
    padding: 15px 25px 25px
    position: relative
    width: 50%

    &:after
        background: cBlue
        border-radius: 5px
        content:''
        height: 100%
        position: absolute
        width: 100%
        z-index: -1

    &:after
        opacity: 0.1
        right: -15px
        top: 15px

footer
    border-top: 1px solid rgba(0,0,0,0.1)
    display: block
    margin: 0 auto
    max-width: 600px
    padding: 40px
    width: 100%

    p
        font-size: 14px
        line-height: 25px
        text-align: center

@media(max-width:800px)
    header
        padding: 0 10px

        h3
            font-size: 40px

    .text-container
    .demo-container
        width: 100%

    .text-container
        margin-bottom: 20px
        padding: 0

        h3
            font-size: 30px

    .demo-container
        margin-bottom: 60px
